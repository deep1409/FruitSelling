<?xml version="1.0" encoding="utf-8"?>
    <com.google.android.material.card.MaterialCardView xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/my_order"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:layout_marginVertical="7sp"
        android:layout_marginStart="7sp"
        android:layout_marginEnd="5sp"
        app:cardCornerRadius="25sp"
        app:cardElevation="25sp"
        app:cardBackgroundColor="@color/white"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="15dp">

        <TextView
            android:id="@+id/item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/product_sans_regular"
            android:text="001"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_id_tv"
            app:layout_constraintStart_toEndOf="@+id/item_id_tv"
            app:layout_constraintTop_toTopOf="@+id/item_id_tv"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/product_sans_regular"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/price_1"
            app:layout_constraintStart_toEndOf="@+id/price_1"
            app:layout_constraintTop_toTopOf="@+id/price_1"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/item_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/product_sans_bold"
            android:text="Item Price:"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/price_1"
            app:layout_constraintTop_toBottomOf="@+id/price_1" />

        <TextView
            android:id="@+id/item_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/product_sans_regular"
            android:text="â‚¹1000"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_price_tv"
            app:layout_constraintStart_toEndOf="@+id/item_price_tv"
            app:layout_constraintTop_toTopOf="@+id/item_price_tv" />

        <TextView
            android:id="@+id/price_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/product_sans_bold"
            android:text="Item quantity:"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/item_id_tv"
            app:layout_constraintTop_toBottomOf="@+id/item_id_tv" />

        <TextView
            android:id="@+id/item_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/product_sans_bold"
            android:text="Item id:"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/item_name"
            app:layout_constraintTop_toBottomOf="@+id/item_name" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/product_sans_regular"
            android:text="Orange"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/item_url"
            app:layout_constraintTop_toTopOf="@+id/item_url" />

        <ImageView
            android:id="@+id/item_url"
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/orange"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>
    
