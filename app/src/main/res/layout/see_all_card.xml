<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/home_cardview_see_all"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200sp"
    android:layout_height="wrap_content"
    android:padding="10sp"
    android:layout_marginVertical="7sp"
    android:layout_marginStart="10sp"
    android:layout_marginEnd="7sp"
    app:cardCornerRadius="25sp"
    app:cardElevation="5sp"
    app:cardBackgroundColor="@color/white"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <ImageView
            android:id="@+id/item_img_see_all"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_marginTop="15sp"
            android:scaleType="fitXY"
            android:src="@mipmap/orange"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_name_see_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Orange"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:fontFamily="@font/product_sans_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_img_see_all" />

        <TextView
            android:id="@+id/item_price_see_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â‚¹50 kg"
            app:layout_constraintTop_toBottomOf="@id/item_name_see_all"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/product_sans_regular"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item_price_see_all"
            android:textSize="15sp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>




</com.google.android.material.card.MaterialCardView>